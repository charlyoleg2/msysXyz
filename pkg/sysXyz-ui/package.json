{
	"name": "sysXyz-ui",
	"description": "the web-ui of sysXyz",
	"version": "0.1.2",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/msysXyz.git"
	},
	"homepage": "https://charlyoleg2.github.io/msysXyz",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"systemix",
		"web-ui",
		"systemui"
	],
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"ci": "run-s prepare build lint check test",
		"github-pages-fix": "touch build/.nojekyll",
		"clean": "rimraf .svelte-kit build node_modules static/pgdsvg"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"mdsvex": "^0.12.6",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"rimraf": "^6.1.2",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	}
}
