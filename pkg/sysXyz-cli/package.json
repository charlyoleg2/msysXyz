{
	"name": "sysXyz-cli",
	"version": "0.1.2",
	"description": "The CLI of sysXyz",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/msysXyz.git"
	},
	"homepage": "https://charlyoleg2.github.io/msysXyz/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"systemix",
		"system parameters"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/sysXyz-cli.d.ts",
			"default": "./dist/sysXyz-cli.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/sysXyz-cli.ts",
			"src/sysAbc-cli.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s check build pretty lint test:unit:once",
		"runSysXyz": "dist/sysXyz-cli.js",
		"runGenStlXyz": "bash tmp/gen_stl_Xyz.sh",
		"runXyz": "run-s runSysXyz runGenStlXyz",
		"runSysAbc": "dist/sysAbc-cli.js",
		"runGenStlAbc": "bash tmp/gen_stl_Abc.sh",
		"runAbc": "run-s runSysAbc runGenStlAbc",
		"run": "run-s runXyz runAbc",
		"clean": "rimraf dist dist2 node_modules tmp tmp2"
	},
	"dependencies": {
		"desi77-cli": "^0.1.20",
		"sysXyz": "^0.1.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.8",
		"geometrix": "^1.0.23",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.38.0",
		"vitest": "^3.2.4"
	}
}
