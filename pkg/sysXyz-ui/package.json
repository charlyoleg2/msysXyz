{
	"name": "sysXyz-ui",
	"description": "the web-ui of sysXyz",
	"version": "0.1.2",
	"private": true,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/msysXyz.git"
	},
	"homepage": "https://charlyoleg2.github.io/msysXyz",
	"author": "charlyoleg2",
	"license": "ISC",
	"keywords": [
		"systemix",
		"web-ui",
		"systemui"
	],
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"ci": "run-s prepare build lint check test",
		"github-pages-fix": "touch build/.nojekyll",
		"clean": "rimraf .svelte-kit build node_modules static/pgdsvg"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.5",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"mdsvex": "^0.12.6",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"rimraf": "^6.0.1",
		"svelte": "^5.35.6",
		"svelte-check": "^4.2.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.36.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	}
}
