{
	"name": "sysXyz",
	"version": "0.1.0",
	"description": "The parameter pyramid of the system Xyz",
	"private": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/msysXyz.git"
	},
	"homepage": "https://charlyoleg2.github.io/msysXyz/",
	"author": "charlyoleg",
	"license": "ISC",
	"keywords": [
		"parametrix",
		"systemix",
		"system parameters"
	],
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s check build pretty lint test:unit:once svgo",
		"svgo1": "svgo -f src/boat/svg -o dist/pgdsvg/",
		"svgo": "run-s svgo1",
		"browserBundleA": "esbuild src/boat/catamaran.ts --bundle --format=esm --outfile=dist2/catamaran.js",
		"browserBundleAll": "esbuild dist/index.js --bundle --format=esm --outfile=dist2/sysXyz.js",
		"clean": "rimraf dist dist2 node_modules"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/eslint__js": "^8.42.3",
		"esbuild": "^0.25.5",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"geometrix": "^1.0.22",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vitest": "^3.2.4"
	}
}
